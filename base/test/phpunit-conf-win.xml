      <directory suffix=".php">..\base\lib_fpdf181</directory>
      <directory suffix=".php">..\base\lib</directory>
      <directory suffix=".php">..\base\vendor</directory>
      <directory suffix=".php">..\base\tmp</directory>
      <directory suffix=".php">..\base\xajax</directory>
      <file>..\base\classes\excelwriter.inc.php</file>
      <file>..\base\classes\FormDin4.xls.php</file>
